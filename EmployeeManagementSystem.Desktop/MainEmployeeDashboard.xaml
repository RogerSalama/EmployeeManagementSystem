<UserControl x:Class="EmployeeManagementSystem.Desktop.MainEmployeeDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8F9FA"
             MinWidth="1000" MinHeight="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E5E5E5" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Logo / Title -->
                <StackPanel DockPanel.Dock="Top" Margin="16,16,16,0">
                    <TextBlock Text="WorkForce Pro" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Employee Management" FontSize="12" Foreground="Gray"/>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Margin="16,24,16,0">
                    <Button Content="Dashboard" Height="36" Margin="0,0,0,8" HorizontalContentAlignment="Left" Padding="12,0"/>
                    <Button Content="Attendance" Height="36" Margin="0,0,0,8" HorizontalContentAlignment="Left" Padding="12,0"/>
                    <Button Content="Vacations" Height="36" Margin="0,0,0,8" HorizontalContentAlignment="Left" Padding="12,0"/>
                    <Button Content="Settings" Height="36" Margin="0,0,0,8" HorizontalContentAlignment="Left" Padding="12,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Column="1" Margin="24,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Welcome -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" LastChildFill="True">
                <TextBlock Text="Employee Dashboard" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Border Background="#EDEDED" CornerRadius="16" Padding="8,4" VerticalAlignment="Center">
                        <TextBlock Text="Checked Out" FontSize="12" Foreground="#444"/>
                    </Border>
                    <Ellipse Width="36" Height="36" Fill="#1F4E79" Margin="12,0,0,0"/>
                </StackPanel>
            </DockPanel>

            <!-- Welcome -->
            <StackPanel Grid.Row="1" Margin="0,12,0,16">
                <TextBlock Text="Welcome back, Tom!" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="Here's your work summary for today" FontSize="12" Foreground="Gray"/>
            </StackPanel>

            <!-- Content cards -->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <!-- Attendance card -->
                <Border Background="White" CornerRadius="6" BorderBrush="#E5E5E5" BorderThickness="1" Padding="16" Margin="0,0,0,16">
                    <DockPanel>
                        <StackPanel>
                            <TextBlock Text="Attendance" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="Ready to start your day?" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="6.5 hours today" FontSize="16" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>

                        <Button x:Name="Check_in_button" Content="Check In"
                                Width="100" Height="32"
                                Background="#2F9B5E" Foreground="White"
                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                DockPanel.Dock="Right" Click="Check_in_button_Click"/>
                    </DockPanel>
                </Border>

                <!-- Summary row (three cards) -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="6" BorderBrush="#E5E5E5" BorderThickness="1" Padding="16">
                        <StackPanel>
                            <TextBlock Text="This Week" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="32.5h" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="+2.5h overtime" FontSize="11" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" CornerRadius="6" BorderBrush="#E5E5E5" BorderThickness="1" Padding="16">
                        <StackPanel>
                            <TextBlock Text="This Month" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="142h" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="18 days present" FontSize="11" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4" Background="White" CornerRadius="6" BorderBrush="#E5E5E5" BorderThickness="1" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Vacation Days" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="23" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Days remaining" FontSize="11" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Project hours & Vacation balance row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Project hours -->
                    <Border Grid.Column="0" Background="White" CornerRadius="6" BorderBrush="#E5E5E5" BorderThickness="1" Padding="16" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Project Hours" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                            <StackPanel>
                                <TextBlock Text="E-commerce Platform" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock Text="3.5h today • 18h this week" FontSize="12" Foreground="Gray" Margin="0,0,0,8"/>

                                <TextBlock Text="Mobile App Development" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock Text="2.5h today • 12h this week" FontSize="12" Foreground="Gray" Margin="0,0,0,8"/>

                                <TextBlock Text="Website Redesign" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock Text="0.5h today • 2.5h this week" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Vacation balance -->
                    <Border Grid.Column="2" Background="White" CornerRadius="6" BorderBrush="#E5E5E5" BorderThickness="1" Padding="16" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Vacation Balance" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                            <StackPanel>
                                <TextBlock Text="Type 1 Vacation — 9 days of 14 remaining" FontSize="12"/>
                                <TextBlock Text="Requires approval" FontSize="11" Foreground="Gray" Margin="0,0,0,8"/>
                                <TextBlock Text="Type 2 Vacation — 14 days of 17 remaining" FontSize="12"/>
                                <TextBlock Text="No approval needed" FontSize="11" Foreground="Gray" Margin="0,0,0,12"/>
                                <Button Content="Request Vacation" Height="32" Width="160" Background="#F0F0F0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
