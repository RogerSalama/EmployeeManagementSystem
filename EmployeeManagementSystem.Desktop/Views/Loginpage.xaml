<Window x:Class="EmployeeManagementSystem.Desktop.Loginpage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WorkForce Pro"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Logo -->
            <Border Background="#1E6F5C" Width="70" Height="70" CornerRadius="35" HorizontalAlignment="Center">
                <TextBlock Text="📊" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <!-- Title -->
            <TextBlock Text="WorkForce Pro" 
                       FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#1E293B"/>
            <TextBlock Text="Employee Management System" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Foreground="#64748B"/>

            <!-- Sign In Section -->
            <TextBlock Text="Log In" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,20,0,0"
                       Foreground="#1E293B"/>
            <TextBlock Text="Enter your credentials to access the system" 
                       FontSize="11" 
                       Foreground="#64748B"/>

            <!-- Username -->
            <StackPanel>
                <TextBlock Text="E-mail" FontSize="12" Margin="0,5,0,2"/>
                <TextBox x:Name="UsernameBox" Height="30" />
            </StackPanel>

            <!-- Password -->
            <StackPanel>
                <TextBlock Text="Password" FontSize="12" Margin="0,5,0,2"/>
                <PasswordBox x:Name="PasswordBox" Height="30"/>
            </StackPanel>

            <!-- Role Dropdown --><!--
            <StackPanel>
                <TextBlock Text="Role" FontSize="12" Margin="0,5,0,2"/>
                <ComboBox x:Name="RoleBox" Height="30">
                    <ComboBoxItem Content="Employee" IsSelected="True"/>
                    <ComboBoxItem Content="Manager"/>
                    <ComboBoxItem Content="Accountant"/>
                    <ComboBoxItem Content="Head of Unit"/>
                    <ComboBoxItem Content="Owner"/>
                </ComboBox>
            </StackPanel>-->

            <!-- Sign In Button -->
            <Button Content="Log In"
                    Height="35"
                    Background="#1E6F5C"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Login_Click"
                    Margin="0,10,0,2"/>

            <!-- Error Message -->
            <TextBlock x:Name="MessageBlock"
                       FontSize="12"
                       Foreground="Red"
                       TextAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
