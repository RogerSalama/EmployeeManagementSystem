<Window x:Class="EmployeeManagementSystem.ManagerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manager Dashboard" Height="600" Width="900" Background="#F4F4F4">

    <Grid>
        <!-- Sidebar -->
        <DockPanel LastChildFill="True">
            <StackPanel Background="#2E3B55" Width="220" DockPanel.Dock="Left">
                <TextBlock Text="WorkForce Pro" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="20,20,0,10"/>
                <TextBlock Text="Manager Panel"
                           Foreground="LightGray" 
                           FontSize="14"
                           Margin="20,0,0,20"/>

                <!-- Sidebar buttons -->
                <Button Content="View Projects" 
                        Margin="10" Height="40" 
                        Foreground="White" Background="#3A4B6E"/>
                <Button Content="View Employees" 
                        Margin="10" Height="40" 
                        Foreground="White" Background="#3A4B6E"/>
                <Button Content="Search Employees" 
                        Margin="10" Height="40" 
                        Foreground="White" Background="#3A4B6E"/>
            </StackPanel>

            <!-- Main content -->
            <Grid Background="White" Margin="10">
                <StackPanel Margin="20">
                    <TextBlock Text="Manager Dashboard" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="#2E3B55"/>
                    <TextBlock Text="Welcome back, Manager!" 
                               FontSize="14" 
                               Foreground="Gray"
                               Margin="0,0,0,20"/>

                    <!-- Info Cards -->
                    <UniformGrid Columns="3" Margin="0,10,0,20" HorizontalAlignment="Stretch">
                        <Border Background="#E3E8F2" CornerRadius="10" Margin="10" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Total Employees" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="52" FontSize="20"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#E3E8F2" CornerRadius="10" Margin="10" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Active Projects" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="7" FontSize="20"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#E3E8F2" CornerRadius="10" Margin="10" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Pending Requests" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="5" FontSize="20"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
